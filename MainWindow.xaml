<Window x:Class="lime_image_viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="青柠图片" Height="1000" Width="1500"
        Background="#121212"
        BorderBrush="#444"
        BorderThickness="1"
        KeyDown="Window_KeyDown"
        AllowDrop="True" Drop="Window_Drop"
        SizeChanged="Window_SizeChanged"
        FocusVisualStyle="{x:Null}"
        WindowStyle="None" ResizeMode="CanResize"
        UseLayoutRounding="True"
        WindowStartupLocation="Manual"
        Left="-32000" Top="-32000"
        ShowInTaskbar="False"
        Opacity="1">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- ================= 极简深色菜单样式 START ================= -->

        <!-- 分隔符样式 -->
        <Style x:Key="{x:Static MenuItem.SeparatorStyleKey}" TargetType="Separator">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Background="#333" Height="1" Margin="4,4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 菜单项样式 -->
        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type MenuItem}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" BorderThickness="0" CornerRadius="4" Margin="3,1">
                            <Grid Height="28">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Icon"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon 区域 (预留) -->
                                <ContentPresenter x:Name="Icon" Grid.Column="0" ContentSource="Icon" Margin="10,0,5,0" 
                                                  VerticalAlignment="Center" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>

                                <!-- 文字 Header -->
                                <ContentPresenter x:Name="HeaderHost" Grid.Column="1" ContentSource="Header" Margin="5,0,20,0" 
                                                  VerticalAlignment="Center" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>

                                <!-- 快捷键提示 -->
                                <TextBlock x:Name="InputGestureText" Grid.Column="2" Text="{TemplateBinding InputGestureText}" 
                                           Margin="5,0,5,0" Foreground="#666" VerticalAlignment="Center" FontSize="11"/>

                                <!-- 子菜单箭头 -->
                                <Path x:Name="Arrow" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                      Data="M0,0 L4,3.5 L0,7 Z" Fill="#888" Visibility="Collapsed"/>

                                <!-- 子菜单弹出层 -->
                                <Popup x:Name="Popup" Placement="Right" HorizontalOffset="-1" IsOpen="{TemplateBinding IsSubmenuOpen}" 
                                       AllowsTransparency="True" Focusable="False" PopupAnimation="Fade">
                                    <Border x:Name="SubmenuBorder" SnapsToDevicePixels="True" Background="#1F1F1F" 
                                            BorderThickness="1" BorderBrush="#333" CornerRadius="6" Padding="2">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="12" Color="Black" Opacity="0.5" ShadowDepth="4"/>
                                        </Border.Effect>
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- 悬停高亮 -->
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="InputGestureText" Property="Foreground" Value="#AAA"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="White"/>
                            </Trigger>
                            <!-- 禁用状态 -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#555"/>
                                <Setter TargetName="Icon" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <!-- 有子菜单时显示箭头 -->
                            <Trigger Property="HasItems" Value="True">
                                <Setter TargetName="Arrow" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 菜单整体容器样式 -->
        <Style TargetType="{x:Type ContextMenu}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Grid.IsSharedSizeScope" Value="True"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContextMenu}">
                        <Border x:Name="Border" Background="#1F1F1F" BorderThickness="1" BorderBrush="#333" CornerRadius="6" Padding="2">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" Color="Black" Opacity="0.5" ShadowDepth="4"/>
                            </Border.Effect>
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================= 极简深色菜单样式 END ================= -->

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="32,10"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#777"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#222"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C42B1C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 输入框样式 -->
        <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="#EEE"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                                <Setter TargetName="border" Property="Background" Value="#000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#EEE"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 语言选择按钮样式 (RadioButton 伪装成按钮) -->
        <Style x:Key="LangRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="#DDD"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#007ACC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 深色滚动条样式 -->
        <Style x:Key="DarkScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="GridRoot" Width="8" Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Background="#444" BorderThickness="0">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Thumb" Property="Background" Value="#666"/>
                            </Trigger>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter TargetName="GridRoot" Property="Height" Value="8"/>
                                <Setter TargetName="GridRoot" Property="Width" Value="Auto"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 应用到 ScrollViewer -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" CanContentScroll="{TemplateBinding CanContentScroll}" CanHorizontallyScroll="False" CanVerticallyScroll="False" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Grid.Column="0" Margin="{TemplateBinding Padding}" Grid.Row="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar" AutomationProperties.AutomationId="VerticalScrollBar" Cursor="Arrow" Grid.Column="1" Maximum="{TemplateBinding ScrollableHeight}" Minimum="0" Grid.Row="0" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportHeight}" Style="{StaticResource DarkScrollBarStyle}"/>
                            <ScrollBar x:Name="PART_HorizontalScrollBar" AutomationProperties.AutomationId="HorizontalScrollBar" Cursor="Arrow" Grid.Column="0" Maximum="{TemplateBinding ScrollableWidth}" Minimum="0" Orientation="Horizontal" Grid.Row="1" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Value="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportWidth}" Style="{StaticResource DarkScrollBarStyle}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid ClipToBounds="True">
        <!-- 底层画布 -->
        <Canvas x:Name="ViewerCanvas" Background="Transparent"
                MouseDown="ViewerCanvas_MouseDown"
                MouseMove="ViewerCanvas_MouseMove"
                MouseUp="ViewerCanvas_MouseUp"
                MouseWheel="ViewerCanvas_MouseWheel">

            <Canvas.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="Menu_Open" Header="打开图片..." Click="BtnOpen_Click"/>
                    <MenuItem x:Name="Menu_Folder" Header="打开所在文件夹" Click="Menu_OpenFolder_Click" InputGestureText="L"/>
                    <Separator/>
                    <MenuItem x:Name="Menu_Mode" Header="显示模式">
                        <MenuItem x:Name="Menu_Auto" Header="自动缩放" Click="Menu_ModeAuto_Click" InputGestureText="1"/>
                        <MenuItem x:Name="Menu_Focus" Header="焦点锁定" Click="Menu_ModeFocus_Click" InputGestureText="2"/>
                        <MenuItem x:Name="Menu_Center" Header="中心锁定" Click="Menu_ModeCenter_Click" InputGestureText="3"/>
                        <MenuItem x:Name="Menu_FitW" Header="宽度优先" Click="Menu_ModeFitW_Click" InputGestureText="4"/>
                        <MenuItem x:Name="Menu_FitH" Header="高度优先" Click="Menu_ModeFitH_Click" InputGestureText="5"/>
                    </MenuItem>
                    <MenuItem x:Name="Menu_Sort" Header="排序方式">
                        <MenuItem x:Name="Menu_SortNA" Header="按名称 (正序)" Click="Menu_SortNameAsc_Click" InputGestureText="N"/>
                        <MenuItem x:Name="Menu_SortND" Header="按名称 (倒序)" Click="Menu_SortNameDesc_Click" InputGestureText="Shift+N"/>
                        <MenuItem x:Name="Menu_SortTA" Header="按时间 (正序)" Click="Menu_SortTimeAsc_Click" InputGestureText="T"/>
                        <MenuItem x:Name="Menu_SortTD" Header="按时间 (倒序)" Click="Menu_SortTimeDesc_Click" InputGestureText="Shift+T"/>
                        <MenuItem x:Name="Menu_SortSA" Header="按大小 (正序)" Click="Menu_SortSizeAsc_Click" InputGestureText="S"/>
                        <MenuItem x:Name="Menu_SortSD" Header="按大小 (倒序)" Click="Menu_SortSizeDesc_Click" InputGestureText="Shift+S"/>
                    </MenuItem>

                    <Separator/>
                    <MenuItem x:Name="Menu_ZIn" Header="放大窗口" Click="Menu_WinZoomIn_Click" InputGestureText="+"/>
                    <MenuItem x:Name="Menu_ZOut" Header="缩小窗口" Click="Menu_WinZoomOut_Click" InputGestureText="-"/>
                    <Separator/>
                    <MenuItem x:Name="Menu_Prev" Header="上一张" Click="Menu_Prev_Click" InputGestureText="←"/>
                    <MenuItem x:Name="Menu_Next" Header="下一张" Click="Menu_Next_Click" InputGestureText="→"/>
                    <Separator/>


                    <MenuItem x:Name="Menu_Info" Header="元数据" Click="Menu_Info_Click" InputGestureText="I"/>
                    <MenuItem x:Name="Menu_Full" Header="全屏显示" Click="Menu_FullScreen_Click" InputGestureText="F11"/>
                    <MenuItem x:Name="Menu_Settings" Header="语言设置" Click="Menu_Settings_Click"/>
                    <MenuItem x:Name="Menu_About" Header="关于" Click="Menu_About_Click"/>
                    <Separator/>
                    <MenuItem x:Name="Menu_Exit" Header="退出" Click="Menu_Exit_Click" InputGestureText="Esc"/>
                </ContextMenu>
            </Canvas.ContextMenu>

            <Image x:Name="MainImage" Stretch="None" RenderTransformOrigin="0,0">
                <Image.RenderTransform>
                    <MatrixTransform x:Name="ImgMatrixTransform"/>
                </Image.RenderTransform>
            </Image>
        </Canvas>

        <!-- 打开按钮 -->
        <Button x:Name="BtnOpen" Content="打开图片 / 拖入图片"
                Style="{StaticResource RoundedButtonStyle}"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="BtnOpen_Click"/>

        <!-- Toast -->
        <Border x:Name="ToastBorder" Background="#D91E1E1E" CornerRadius="20"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50"
                Padding="20,8" Opacity="0" IsHitTestVisible="False">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <TextBlock x:Name="ToastText" Foreground="White" FontSize="14"/>
        </Border>

        <!-- EXIF/XMP 面板 -->
        <Grid x:Name="ExifOverlay" Background="#66000000" Visibility="Collapsed" MouseDown="ExifOverlay_MouseDown">
            <Border Background="#1E1E1E" Width="420" MaxHeight="650" CornerRadius="12" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="#444" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="15" Opacity="0.7"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 标题栏 -->
                    <Border Grid.Row="0" Background="#252525" CornerRadius="12,12,0,0">
                        <Grid>
                            <TextBlock x:Name="TxtMetaTitle" Text="元数据" Foreground="#FFF" FontWeight="Bold" Margin="20,15" FontSize="14"/>
                            <Button Content="✕" HorizontalAlignment="Right" Width="30" Height="30" Margin="0,0,10,0"
                                    Style="{StaticResource CloseButtonStyle}"
                                    Click="CloseExif_Click"/>
                        </Grid>
                    </Border>

                    <!-- 内容区域 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                        <StackPanel Margin="25,20">
                            <!-- 基础信息 -->
                            <TextBlock x:Name="TxtBaseInfo" Text="基础信息" Foreground="#888" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="ExifName" Foreground="#DDD" Margin="0,2" TextTrimming="CharacterEllipsis"/>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="ExifSize" Grid.Column="0" Foreground="#AAA" FontSize="12"/>
                                <TextBlock x:Name="ExifDate" Grid.Column="1" Foreground="#AAA" FontSize="12"/>
                            </Grid>
                            <TextBlock x:Name="ExifRes" Foreground="#AAA" FontSize="12" Margin="0,2"/>
                            <TextBlock x:Name="ExifPath" Foreground="#666" FontSize="11" Margin="0,5,0,15" TextWrapping="Wrap"/>

                            <Separator Background="#333" Margin="0,0,0,15"/>

                            <!-- XMP 编辑区域 -->
                            <TextBlock x:Name="TxtXmpEdit" Text="XMP 元数据编辑" Foreground="#888" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>

                            <TextBlock x:Name="TxtL_Title" Text="标题 (Title)" Foreground="#BBB" FontSize="12" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtXmpTitle" Style="{StaticResource DarkTextBoxStyle}" Margin="0,0,0,10"/>

                            <TextBlock x:Name="TxtL_Author" Text="作者 (Author/Creator)" Foreground="#BBB" FontSize="12" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtXmpCreator" Style="{StaticResource DarkTextBoxStyle}" Margin="0,0,0,10"/>

                            <TextBlock x:Name="TxtL_Desc" Text="描述 (Description)" Foreground="#BBB" FontSize="12" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtXmpDesc" Style="{StaticResource DarkTextBoxStyle}" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

                            <!-- 保存按钮 -->
                            <Button x:Name="BtnSaveMeta" Content="保存元数据 (Save)" Click="BtnSaveXmp_Click" Height="36" Cursor="Hand" Margin="0,5,0,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- 设置面板 (Settings Overlay) -->
        <Grid x:Name="SettingsOverlay" Background="#66000000" Visibility="Collapsed" MouseDown="Overlay_MouseDown">
            <Border Background="#1E1E1E" Width="340" Height="Auto" CornerRadius="12" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="#444" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="15" Opacity="0.7"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#252525" CornerRadius="12,12,0,0">
                        <Grid>
                            <TextBlock x:Name="TxtSettingsTitle" Text="设置" Foreground="#FFF" FontWeight="Bold" Margin="20,15" FontSize="14"/>
                            <Button Content="✕" HorizontalAlignment="Right" Width="30" Height="30" Margin="0,0,10,0"
                                    Style="{StaticResource CloseButtonStyle}" Click="CloseSettings_Click"/>
                        </Grid>
                    </Border>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Margin="20,20,20,10">
                        <StackPanel>
                            <TextBlock x:Name="TxtLangSelect" Text="选择语言 (Language)" Foreground="#CCC" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                            <UniformGrid Columns="2">
                                <RadioButton x:Name="RbZhCN" Content="简体中文" Tag="zh-CN" Click="LangRadio_Click" Style="{StaticResource LangRadioButtonStyle}"/>
                                <RadioButton x:Name="RbZhTW" Content="繁體中文" Tag="zh-TW" Click="LangRadio_Click" Style="{StaticResource LangRadioButtonStyle}"/>
                                <RadioButton x:Name="RbEnUS" Content="English" Tag="en-US" Click="LangRadio_Click" Style="{StaticResource LangRadioButtonStyle}"/>
                                <RadioButton x:Name="RbJaJP" Content="日本語" Tag="ja-JP" Click="LangRadio_Click" Style="{StaticResource LangRadioButtonStyle}"/>
                                <RadioButton x:Name="RbKoKR" Content="한국어" Tag="ko-KR" Click="LangRadio_Click" Style="{StaticResource LangRadioButtonStyle}"/>
                                <RadioButton x:Name="RbFrFR" Content="Français" Tag="fr-FR" Click="LangRadio_Click" Style="{StaticResource LangRadioButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 增加了 Height="40" 并且移除了底部的大 Margin 改为通过 Row 撑开 -->
                    <Button x:Name="BtnSettingsConfirm" Grid.Row="2" Content="确定" Margin="30,10,30,20" Height="40"
                            Style="{StaticResource RoundedButtonStyle}" Click="BtnSettingsConfirm_Click"/>
                </Grid>
            </Border>
        </Grid>

        <!-- 关于面板 (About Overlay) -->
        <Grid x:Name="AboutOverlay" Background="#66000000" Visibility="Collapsed" MouseDown="Overlay_MouseDown">
            <Border Background="#1E1E1E" Width="500" MaxHeight="800" CornerRadius="12" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="#444" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="15" Opacity="0.7"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#252525" CornerRadius="12,12,0,0">
                        <Grid>
                            <TextBlock x:Name="TxtAboutTitle" Text="关于" Foreground="#FFF" FontWeight="Bold" Margin="20,15" FontSize="14"/>
                            <Button Content="✕" HorizontalAlignment="Right" Width="30" Height="30" Margin="0,0,10,0"
                                    Style="{StaticResource CloseButtonStyle}" Click="CloseAbout_Click"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="30,20">
                            <TextBlock Text="青柠图片" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="TxtProjectIntro" Text="青柠图片 是一个美观、方便好用的图片查看器，支持多种格式与元数据编辑" 
                                       Foreground="#BBB" TextWrapping="Wrap" Margin="0,0,0,15" LineHeight="20" />

                            <TextBlock Text="GitHub:" Foreground="#888" Margin="0,5,0,2"/>
                            <TextBox Style="{StaticResource DarkTextBoxStyle}" Text="https://github.com/rango886/lime-image" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="#4DA6FF"/>

                            <TextBlock Text="Author:" Foreground="#888" Margin="0,10,0,2"/>
                            <TextBox Style="{StaticResource DarkTextBoxStyle}" Text="李志平" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="#4DA6FF"/>

                            <Separator Background="#333" Margin="0,15"/>

                            <TextBlock x:Name="TxtDonation" Text="捐赠支持" Foreground="#FFF" FontWeight="Bold" Margin="0,0,0,10"/>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0" HorizontalAlignment="Center">
                                    <TextBlock Text="支付宝 Alipay" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <Border Background="White" Width="150" Height="150" CornerRadius="4">
                                        <Image x:Name="ImgAlipay" Stretch="Uniform"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0" HorizontalAlignment="Center">
                                    <TextBlock Text="微信 WeChat" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <Border Background="White" Width="150" Height="150" CornerRadius="4">
                                        <Image x:Name="ImgWechat" Stretch="Uniform"/>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="BTC:" Foreground="#888" Margin="0,15,0,2"/>
                            <TextBox Style="{StaticResource DarkTextBoxStyle}" Text="1Mu7RNd5KiJmCmsezX86wckT6DHnQuj69p" IsReadOnly="True"/>

                            <TextBlock Text="ETH:" Foreground="#888" Margin="0,10,0,2"/>
                            <TextBox Style="{StaticResource DarkTextBoxStyle}" Text="0x4b60173978fec8cc05787488c98f43d45910e123" IsReadOnly="True"/>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- 标题栏容器 -->
        <Grid x:Name="TitleBarContainer" Height="32" VerticalAlignment="Top" Background="Transparent">
            <Grid x:Name="TitleBarContent" Background="#99000000" Opacity="0" MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="WinTitleText" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                           Foreground="#BBB" VerticalAlignment="Center" Margin="15,0,0,0"
                           FontSize="12" IsHitTestVisible="False"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button Content="─" Style="{StaticResource WindowControlButtonStyle}" Click="WinMin_Click"/>
                    <Button Content="☐" Style="{StaticResource WindowControlButtonStyle}" Click="WinMax_Click"/>
                    <Button Content="✕" Style="{StaticResource WindowCloseButtonStyle}" Click="WinClose_Click"/>
                </StackPanel>
            </Grid>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="TitleBarContent" Storyboard.TargetProperty="Opacity"
                                             To="1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="TitleBarContent" Storyboard.TargetProperty="Opacity"
                                             To="0" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
        </Grid>

    </Grid>
</Window>